<Window x:Name="window" x:Class="Lei1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lei1"
        mc:Ignorable="d"
        Title="MainWindow" Width="1370" Height="700" Top="0" Left="0">
    <Grid x:Name="grid" Margin="0 0 0 0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Source="{Binding ImageSource}" Stretch="UniformToFill" Grid.RowSpan="2" />
    </Grid>
</Window>
